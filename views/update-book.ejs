<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head') %>
  </head>
  <body>
    <%- include('includes/header') %>
    <main>
      <h1>Update the Book</h1>
      <form action="/books/<%= book.id %>/edit" method="POST">
        <div>
          <label for="title"> Title</label>
          <input type="text" name="title" required value="<%= book.title %>" />
        </div>
        <div>
          <label for="summary">Summary</label>
          <input
            type="text"
            name="summary"
            maxlength="255"
            required
            value="<%= book.summary %>"
          />
        </div>

        <div>
          <label for="content">Book Content</label>
          <textarea name="content" id="" rows="5" cols="20" required>
          value="<%= book.body %>"</textarea
          >
        </div>

        <button>update the book</button>
      </form>
    </main>
  </body>
</html>
